---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  iconName: string;
}

const { title, iconName }: Props = Astro.props;
---

<div class="transparent-card fade-in-card p-4">
  <h2 class="text-xl font-semibold mb-4 flex items-center">
    <Icon name={iconName} class="text-2xl leading-5 mr-2" />
    {title}
  </h2>
  <slot />
</div>
