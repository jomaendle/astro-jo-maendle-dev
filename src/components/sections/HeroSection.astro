---
import DotBackground from "@components/ui/DotBackground.astro";
import Button from "../ui/Button.astro";
import Card from "../ui/Card.astro";
import SectionTitle from "../ui/SectionTitle.astro";

const items = [
  {
    title: "Custom Web App Development",
    subtitle: "Angular, React, and more",
  },
  {
    title: "User Experience Enhancement",
    subtitle: "Elevate your UX",
  },
  {
    title: "Collaborative Development",
    subtitle: "Working with your team",
  },
];
---

<DotBackground />
<div class="flex flex-col gap-12 max-w-2xl">
  <div class="flex flex-col gap-4 text-center md:text-left">
    <h1
      class="font-medium text-[40px] leading-[44px] max-w-[400px] md:max-w-none mx-auto md:mx-0"
    >
      JS-powered
      <span class="text-blue-500/80 whitespace-nowrap"> Full-Stack </span>
      Engineering
    </h1>

    <p class="max-w-[400px] mx-auto md:max-w-none md:mx-0">
      Creating seamless, scalable, and user-driven applications for modern
      businesses.
    </p>
  </div>

  <div class="flex gap-4 justify-center md:justify-start">
    <Button size="medium" variant="secondary"> Work Together </Button>
    <Button size="medium" variant="tertiary"> Get in contact </Button>
  </div>
</div>

<div class="flex flex-col gap-6 mt-20 md:mt-28">
  <SectionTitle>How I Can Help You</SectionTitle>

  <div
    class="md:flex sm:gap-8 gap-4 flex flex-col md:flex-row flex-wrap sm:grid grid-cols-2"
  >
    {
      items.map((i) => {
        return (
          <Card title={i.title} subtitle={i.subtitle}>
            <div class="flex gap-2 pt-8">
              <a href="#" class="text-blue-500 flex-1">
                Learn more
              </a>{" "}
              &rarr;
            </div>
          </Card>
        );
      })
    }
  </div>
</div>
