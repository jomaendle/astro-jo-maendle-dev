---
import SectionTitle from "@components/ui/SectionTitle.astro";

import Card from "../ui/Card.astro";

const items = [
  {
    title: "Custom Web App Development",
    subtitle: "Angular, React, and more",
  },
  {
    title: "User Experience Enhancement",
    subtitle: "Elevate your UX",
  },
  {
    title: "Collaborative Development",
    subtitle: "Working with your team",
  },
];
---

<div class="flex flex-col gap-6 mt-20 md:mt-28">
  <SectionTitle>How I Can Help You</SectionTitle>

  <div
    class="md:flex sm:gap-8 gap-4 flex flex-col md:flex-row flex-wrap sm:grid grid-cols-2"
  >
    {
      items.map((i) => {
        return (
          <Card title={i.title} subtitle={i.subtitle}>
            <div class="flex gap-2 pt-8">
              <a href="#" class="text-primary flex-1">
                Learn more
              </a>{" "}
              <span class="text-xl">&rarr;</span>
            </div>
          </Card>
        );
      })
    }
  </div>
</div>
