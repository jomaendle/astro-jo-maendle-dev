---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div
  class="bg-backgroundLifted backdrop-blur-[3px] p-6 flex flex-col rounded-sm w-full group cursor-pointer transition-all border border-border md:max-w-[288px] aspect-[2] sm:aspect-[5/4]"
>
  <p class="text-sm text-secondary">{subtitle}</p>
  <h1 class="text-xl leading-6 sm:text-3xl font-bold text-primary mt-1 flex-1">
    {title}
  </h1>
  <div>
    <slot />
  </div>
</div>
