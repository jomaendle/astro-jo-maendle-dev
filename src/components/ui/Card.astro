---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div class=`bg-backgroundLifted p-6 rounded-xl flex-1`>
  <p class="text-sm text-secondary">{subtitle}</p>
  <h1 class="text-2xl font-bold text-primary mt-1 mb-16">{title}</h1>
  <div>
    <slot />
  </div>
</div>
