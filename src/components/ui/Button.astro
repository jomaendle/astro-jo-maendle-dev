---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"button"> {
  variant: "primary" | "secondary" | "link" | "icon";
  size: "small" | "medium" | "large";
}

const { size, variant, ...props } = Astro.props;

const baseStyle =
  "rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition duration-200 ease-in-out";

const variantClassResolver = {
  primary: "bg-blue-700 text-white hover:bg-blue-800",
  secondary: "bg-gray-200 text-gray-800 hover:bg-gray-300",
  link: "text-blue-500 underline hover:text-blue-600",
  icon: "rounded-full",
};

const sizeClassResolver = {
  small: "py-1 px-2",
  medium: "py-2 px-4",
  large: "py-3 px-6",
};
---

<button
  class={`${variantClassResolver[variant]} ${sizeClassResolver[size]} ${baseStyle} ${props.class ? props.class : ""}`}
  {...props}
>
  <slot />
</button>
